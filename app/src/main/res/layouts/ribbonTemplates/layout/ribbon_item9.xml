<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ribbon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_afghanistan_campaign_medal_ribbon" />

            <ImageView
                android:id="@+id/ribbon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/ribbon1"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_afghanistan_campaign_medal_ribbon" />

            <ImageView
                android:id="@+id/ribbon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/ribbon2"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_afghanistan_campaign_medal_ribbon" />

            <ImageView
                android:id="@+id/ribbon4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ribbon1"
                app:srcCompat="@drawable/ic_afghanistan_campaign_medal_ribbon" />

            <ImageView
                android:id="@+id/ribbon5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/ribbon4"
                app:layout_constraintTop_toBottomOf="@+id/ribbon2"
                app:srcCompat="@drawable/ic_afghanistan_campaign_medal_ribbon" />

            <ImageView
                android:id="@+id/ribbon6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/ribbon5"
                app:layout_constraintTop_toBottomOf="@+id/ribbon3"
                app:srcCompat="@drawable/ic_afghanistan_campaign_medal_ribbon" />

            <ImageView
                android:id="@+id/ribbon7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ribbon4"
                app:srcCompat="@drawable/ic_afghanistan_campaign_medal_ribbon" />

            <ImageView
                android:id="@+id/ribbon8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/ribbon7"
                app:layout_constraintTop_toBottomOf="@+id/ribbon5"
                app:srcCompat="@drawable/ic_afghanistan_campaign_medal_ribbon" />

            <ImageView
                android:id="@+id/ribbon9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/ribbon8"
                app:layout_constraintTop_toBottomOf="@+id/ribbon6"
                app:srcCompat="@drawable/ic_afghanistan_campaign_medal_ribbon" />

        </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>


