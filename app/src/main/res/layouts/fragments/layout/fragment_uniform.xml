<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".screens.OutfitFragment">

        <Button
            android:id="@+id/btn_ribbons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Awards"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.126" />

        <Button
            android:id="@+id/btn_badges"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Badges"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_ribbons" />

        <Button
            android:id="@+id/btn_combatService"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/CombatService"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_badges" />

        <Button
            android:id="@+id/btn_identificationbadge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/IdentificationBadge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_combatService" />

        <Button
            android:id="@+id/btn_overseas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/OverSeas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_identificationbadge" />

        <Button
            android:id="@+id/btn_serviceStripes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/ServiceStripes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_overseas" />

        <Button
            android:id="@+id/btn_insignia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Regimental"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_serviceStripes" />

        <Button
            android:id="@+id/btn_build_uniform"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/Build"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_insignia" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>